{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "modules"
  },
  "include": ["modules/**/*.ts", "config/db.ts"],
  "exclude": ["node_modules", "dist"]
}
